<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Student Information</title>
  <link rel="stylesheet" href="header.css">
  <link rel="stylesheet" href="/add.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container">
    <a href="/dashboard" class="btn-back">‚Üê Back to Dashboard</a>
    <h2>Add Student Information</h2>

    <form action="/addStudent" method="POST">
      <!-- LEFT COLUMN -->
      <div>
        <label>Student ID:</label>
        <input type="text" name="student_id" required>

        <label>Full Name:</label>
        <input type="text" name="name" required>

        <label>Course:</label>
        <input type="text" name="course" required>

        <label>Year Level:</label>
        <select name="year_level" id="year_level" required>
          <option value="">Select Year Level</option>
          <option value="1st Year">1st Year</option>
          <option value="2nd Year">2nd Year</option>
          <option value="3rd Year">3rd Year</option>
          <option value="4th Year">4th Year</option>
        </select>

        <label>Total Tuition:</label>
        <input type="number" name="total_tuition" step="0.01">

        <label>Monthly Allowance:</label>
        <input type="number" name="monthly_allowance" step="0.01">
      </div>

      <!-- RIGHT COLUMN -->
      <div>
        <fieldset>
          <legend>Financial Aid</legend>
          <select name="financial_aid" required>
            <option value="">Select Financial Aid</option>
            <option value="CHED Merit Scholarship Program (CMSP)">CHED Merit Scholarship Program (CMSP)</option>
            <option value="SM College Scholarship">SM College Scholarship</option>
            <option value="PHINMA Scholarship">PHINMA Scholarship</option>
            <option value="OWWA Scholarship">OWWA Scholarship</option>
            <option value="None">None</option>
          </select>
        </fieldset>

        <fieldset>
          <legend>Financial Parent Support</legend>
          <select name="parental_support" required>
            <option value="">Select Financial Parent Support</option>
            <option value="Parents">Parents</option>
            <option value="Relatives Abroad">Relatives Abroad</option>
            <option value="Working Students">Working Student</option>
            <option value="Sponsors">Sponsors</option>
            <option value="Government as Financial Parent">Government as Financial Parent</option>
            <option value="Student Loans">Student Loans</option>
          </select>
        </fieldset>

        <label>General Weighted Average (GWA):</label>
        <input type="number" name="gwa" step="0.01">
      </div>

      <!-- SUBMIT BUTTON -->
      <div class="submit-section">
        <button type="submit">Save Student</button>
      </div>
    </form>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
