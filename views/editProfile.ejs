<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Profile</title>
  <link rel="stylesheet" href="/header.css">
  <link rel="stylesheet" href="/editUser.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container">
    <h2 class="editProf">Edit Profile</h2>
    <hr>

    <form action="/updateProfile/<%= user.id %>" method="POST" class="edit-form">
      <div class="form-group">
        <label>Username:</label>
        <input type="text" name="username" value="<%= user.username %>" required>
      </div>

      <div class="form-group">
        <label>First Name:</label>
        <input type="text" name="firstName" value="<%= user.firstName %>" required>
      </div>

      <div class="form-group">
        <label>Last Name:</label>
        <input type="text" name="lastName" value="<%= user.lastName %>" required>
      </div>

      <div class="form-group">
        <label>Contact No:</label>
        <input type="text" name="contactNo" value="<%= user.contactNo %>" required>
      </div>

      <div class="form-group">
        <label>Employee No:</label>
        <input type="text" name="empNo" value="<%= user.empNo %>" required>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn-primary">Update Profile</button>
        <a href="/userProfile/<%= user.id %>" class="btn-back">Cancel</a>
      </div>
    </form>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
